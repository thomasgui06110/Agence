{% extends "base.html.twig" %}

{% block title 'Création d\'un utilisateur' %}
{% block body %}
<div class="container mt-4">

    <h1>Création d'un utilisateur</h1>
    
    {{ form_start(form) }}
    
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Emai'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder': 'Confirmation du mot de passe'}}) }}
    <button class="btn btn-primary">Inscription !</button>
    {{ form_end(form) }}
</div>
{% endblock %}