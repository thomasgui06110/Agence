<div class="card mb-4">
    {% if property.filename %}
    <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        <img src='/images/properties/{{ property.filename }}' class="card-img-top" style="width: 100%; height: auto;" alt=" {{ property.title }}">
    </a>
    {% else %}
    <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        <img src='/images/properties/empty.jpg' class="card-img-top" style="width: 100%; height: auto;" alt=" {{ property.title }}">
    </a>
    {% endif %}
    <div class="card-body">
        
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style ="font-size:2rem; font-weight: bold;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>